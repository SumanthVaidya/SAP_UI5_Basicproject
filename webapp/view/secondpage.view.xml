     <Text id="prodcount" text="Total count = 7"></Text>
     <Button id="prodbutton" text="See details" press="onprod"></Button>
    </VBox>
    <VBox id="vbox3" class="vboxclass">
     <Text id="sales" text="Sales" textAlign="Begin"></Text>
    <Text id="report" text="Report" textAlign="Begin"></Text>
     <Image id="img_3" src="/images/accenture logo.jpg" width="50px"></Image>
