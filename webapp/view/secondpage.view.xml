    <HBox id="hbox1" class="hboxclass">
    <VBox id="vbox1" class="vboxclass">
    <Text id="empname" text="Employee" textAlign="Begin"></Text>
    <Text id="empdetails" text="Details" textAlign="Begin"></Text>
    <Image id="img_1" src="/images/accenture logo.jpg" width="50px"></Image>
    <Text id="empcount" text="Total count = 4"></Text>
    <Button id="empbutton" text="See details" press="onempdetails"></Button>
    </VBox>
    <VBox id="vbox2" class="vboxclass">
     <Text id="prod" text="Product" textAlign="Begin"></Text>
    <Text id="details" text="Details" textAlign="Begin"></Text>
